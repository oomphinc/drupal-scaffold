{
  "name": "drupal-scaffold",
  "version": "1.0.0",
  "description": "A Drupal scaffold project with Webpack",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oomphinc/drupal-scaffold.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "webpack --watch --config ./webpack/webpack.dev.js",
    "build": "webpack --config ./webpack/webpack.prod.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "npx @biomejs/biome lint ./web/themes/custom/**/assets/js/*.es6.js",
    "lint:css": "stylelint \"./web/themes/custom/**/assets/css/*.pcss\"",
    "fix": "npm run fix:js && npm run fix:css",
    "fix:js": "npx @biomejs/biome lint --write ./web/themes/custom/**/assets/js/*.es6.js",
    "fix:css": "stylelint \"./web/themes/custom/**/assets/css/*.pcss\" --fix",
    "format": "npx @biomejs/biome format --write ./web/themes/custom/**/assets/js/*.es6.js",
    "polish": "npm run format && npm run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "autoprefixer": "^10.4.19",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.37.1",
    "css-loader": "^7.1.2",
    "glob": "^11.0.0",
    "js-yaml-loader": "^1.2.2",
    "mini-css-extract-plugin": "^2.9.0",
    "open-cli": "^8.0.0",
    "postcss": "^8.4.40",
    "postcss-custom-media": "^10.0.8",
    "postcss-custom-properties": "^13.3.12",
    "postcss-easing-gradients": "^3.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^10.0.1",
    "postcss-nested": "^6.2.0",
    "postcss-pxtorem": "^6.1.0",
    "postcss-short-position": "^4.0.1",
    "postcss-simple-vars": "^7.0.1",
    "style-loader": "^4.0.0",
    "stylelint": "^16.7.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-webpack-plugin": "^5.0.1",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.25.0",
    "babel-loader": "^9.1.3",
    "babel-preset-minify": "^0.5.2"
  }
}
