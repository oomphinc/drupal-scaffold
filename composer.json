{
    "name": "oomphinc/drupal-scaffold",
    "description": "A Drupal scaffold project",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Oomph, Inc.",
            "email": "devops@oomphinc.com",
            "homepage": "https://www.oomphinc.com/"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "composer/installers": "^2.3",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.4",
        "drupal/coder": "^8.3",
        "drupal/config_split": "^2",
        "drupal/core-composer-scaffold": "^10.3.1",
        "drupal/core-project-message": "^10.3.1",
        "drupal/core-recommended": "^10.3.1",
        "drupal/core-vendor-hardening": "^10.3.1",
        "drupal/devel": "^5.0",
        "drupal/seckit": "^2.0",
        "drush/drush": "^12.0",
        "oomphinc/composer-installers-extender": "^2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/core-vendor-hardening": true,
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ],
        "test:php": [
            "vendor/bin/phpunit"
        ],
        "validate:php": [
            "vendor/bin/phpcs"
        ]
    },
    "extra": {
        "installer-types": ["npm-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {},
        "drupal-scaffold": {
            "locations": {
                "web-root": "web"
            }
        }
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0",
        "mglaman/phpstan-drupal": "^1.2",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpunit/phpunit": "^9.6",
        "slevomat/coding-standard": "^8.15",
        "symfony/phpunit-bridge": "^7.1"
    }
}
